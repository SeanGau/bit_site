script.
  $(function(){
    $('.nav-link').click(function(event) {
      event.preventDefault();
      var scroll_target = $(event.target).attr("href").replace("/","");
      //console.log(scroll_target);
      $('html,body').animate({scrollTop:$(scroll_target).offset().top-$('#navbar').outerHeight(true)},300);
    });
    
    $(window).on('activate.bs.scrollspy', function (e,obj) {
    });
  });
  
  $(window).scroll(function(){
    $("#about, #works").css({"background-position": `center ${$(this).scrollTop()/20}px`})
  });
